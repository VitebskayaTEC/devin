@model List<Storage>

@if (Model.Count != 0)
{
    <table class="items">
        <thead>
            <tr>
                <td width="20px">
                    <input type="checkbox" class="selecter-all" />
                </td>
                <th width="20px" data-type="type"></th>
                <th width="56px" data-type="number">Инв. №</th>
                <th data-type="string">Наименование</th>
                <th width="56px" data-type="number">Стоимость</th>
                <th width="56px" data-type="number">Приход</th>
                <th width="90px" data-type="date">Дата покупки</th>
                <th width="60px" data-type="number">На складе</th>
                <th width="60px" data-type="number">Установлено</th>
                <th width="60px" data-type="number">Списано</th>
                <th width="70px" data-type="string">Счет учета</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Storage storage in Model)
            {
                string id = "storage" + storage.Id;
                string href = "##" + id;

                <tr id="@id" class="item">
                    <td><input type="checkbox" class="selecter" /></td>
                    <td><a class="view__link" href="@href"><div class="led @storage.Led()"></div></a></td>
                    <td><a class="view__link" href="@href">@storage.Inventory</a></td>
                    <td><a class="view__link" href="@href">@storage.Name</a></td>
                    <td><a class="view__link" href="@href">@storage.Cost</a></td>
                    <td><a class="view__link" href="@href">@storage.Nall</a></td>
                    <td><a class="view__link" href="@href">@storage.Date.ToString("dd.MM.yyyy")</a></td>
                    <td><a class="view__link" href="@href">@storage.Nstorage</a></td>
                    <td><a class="view__link" href="@href">@storage.Nrepairs</a></td>
                    <td><a class="view__link" href="@href">@storage.Noff</a></td>
                    <td><a class="view__link" href="@href">@storage.Account</a></td>
                </tr>
            }
        </tbody>
    </table>
}