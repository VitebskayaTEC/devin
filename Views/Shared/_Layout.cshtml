<!Doctype html>
<html>

<head>
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta http-equiv="Content-Type" content="text/html; charset=windows-1251" />
    <link rel="stylesheet" href="~/content/css/core.css?v=1" />
    <link rel="shortcut icon" href="~/content/img/favicon.ico" type="image/x-icon" />
    <title>@ViewBag.Title</title>
    @RenderSection("styles", false)
</head>

<body>

    @{ string url = Request.Url.AbsoluteUri.ToLower(); }
    <ul class="main-menu">
        <li>
            <a href="/" style="width: 36px"><div class="icon ic-exit-to-app"></div></a>
        </li><li>
            <a href="~/devices/" class="@(url.Contains("devices") ? "point-now" : "")">DEVIN</a>
        </li><li>
            <a href="~/storages/" class="@(url.Contains("storages") ? "point-now" : "")">Склад</a>
        </li><li>
            <a href="~/repairs/" class="@(url.Contains("repairs") ? "point-now" : "")">Ремонты</a>
        </li><li>
            <a href="~/aida/" class="@(url.Contains("aida") ? "point-now" : "")">AIDA</a>
        </li><li>
            <a href="~/catalog/" class="@(url.Contains("catalog") ? "point-now" : "")">Каталог</a>
        </li>@RenderSection("menu", false)
    </ul>

    <div id="view" class="view">
        @RenderBody()
    </div>

    <div id="cart" class="cart"></div>

    @RenderSection("html", false)

    <div class="messages"></div>

    <script>const host = '@Url.Action("", "")';</script>
    <script src="~/content/js/core.js?v=1"></script>
    @RenderSection("scripts", false)
</body>

</html>